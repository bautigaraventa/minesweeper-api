{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "allowJs": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "outDir": "./dist",
        "baseUrl": "./src",
        "alwaysStrict": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}